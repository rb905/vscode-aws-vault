{
    // Launch configuration for running Serverless Offline
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Serverless Offline",
            "program": "${workspaceFolder}/node_modules/.bin/sls",
            "args": [
                "offline",
                "start"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "runtimeExecutable": "${env:HOME}/.nvm/current/bin/node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Serverless Invoke Local - foo",
            "program": "${workspaceFolder}/node_modules/.bin/sls",
            "args": [
            "invoke",
            "local",
            "--function",
            "foo",
            "--region",
            "us-east-1",
            "--path",
            "${workspaceFolder}/event.json"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
            "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "runtimeExecutable": "${env:HOME}/.nvm/current/bin/node"
        }
    ]
}