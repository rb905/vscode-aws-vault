// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "never",
				"group": "build"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"shell": {
					"executable": "/bin/bash",
					"args": ["-c", "source ~/.nvm/nvm.sh && nvm use current && npm run compile"]
				}
			}
		},
		{
			"type": "npm",
			"script": "compile-tests",
			"problemMatcher": "$tsc",
			"presentation": {
				"reveal": "never",
				"group": "build"
			},
			"group": "build",
			"options": {
				"shell": {
					"executable": "/bin/bash",
					"args": ["-c", "source ~/.nvm/nvm.sh && nvm use current && npm run compile-tests"]
				}
			}
		},
		{
			"label": "tasks: compile-tests",
			"dependsOn": [
				"npm: compile",
				"npm: compile-tests"
			],
			"problemMatcher": []
		}
	]
}
